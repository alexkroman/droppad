body {
  margin: 0px;
  padding: 0;
  background-color: #fff;
  font-family: "Lucida Grande", "Bitstream Vera Sans", "Verdana";
  font-size: 16px;
  color: #333;
}

#container {
	overflow: hidden;
}

h1 {
  font-size: 18px;
}

#header a  { color: white }

#header a:hover {
  background-color: #333;
  color: white;
  text-decoration: none;
}

#header H1 a  { 
	color: white;
	text-decoration: none;
}

#header H1 a:hover {
  color: white;
  background-color: transparent;
  text-decoration: none;
}
a.none:hover {background-color:transparent}

a  { color: #333 }

#typebox { 
	position: absolute; 
	bottom: 0px; 
	left: 0px; 
	width: 100%; 
	height: 37px; 
	margin: 0px; 
	padding: 0px; 
	text-align: center;
	background-color: #999}
		
#typebox FORM { margin: 0px; }

#loading, #sending_invites {
	background-color: red;
	color: #fff;
	top:0px;
	right:0px;
	z-index:5;
	position:absolute;	
}
#invites_sent {
	background-color: green;
	color: #fff;
	top:0px;
	right:0px;
	z-index:5;
	position:absolute;	
}

#header {
	text-align: left;
	position: absolute;
	top: 0px;
	left: 0px;
	height: 39px;
	width: 100%;
	padding-left:10px;
	background-color: #4CB60D;
	color: #fff;
	margin: 0px;
	font-size:12px;
}

#navigation {
	float: right;
	padding-right:20px;
}

#buttons {
	padding-top:5px;
	padding-right:10px;
}

#header H1 { margin: 7px; font-size: 19px }

#stage { padding: 8px 12px; }

#conversation {
	position: absolute;
	left: 0px;
	top: 39px;
	overflow: auto; 
	line-height: 22px;
	width: 100%;
	height: 92%;
	background-color: #fff;
	background-image: url(../images/green.png);
	background-position: center top;
    background-repeat: repeat-x;
}

#conversation_main {
	position: absolute;
	left: 0px;
	width: 100%;
	background-color: #fff;
	background-image: url(../images/green.png);
	background-position: center top;
    background-repeat: repeat-x;
}
#entryfield { 
	font-size: 20px; 
	margin-left: auto; 
	margin-right: auto; 
	width: 99%; 
	margin-top: 4px
}

#overlay { 
    background-image: url(../images/overlay.png);
    position: absolute;
    top: 0px;
    left: 0px;
    z-index: 90;
    width: 100%;
    height: 100%;
}

* html #overlay {
    background-color: #333;
    background-color: transparent;
    background-image: url(../blank.gif);
    filter: progid:DXImageTransform.Microsoft.AlphaImageLoader(
        src="/images/overlay.png", sizingMethod="scale");
}

#box {
    width:300px;
    background:#2d2d2d;
    padding:10px;
    border:2px solid #eee;
}

#close {
    position:absolute;
    top:-5px;
    right:-5px;
    cursor:pointer;
}

#errors {
	background: #FAE79A url(/images/error.png) no-repeat 5px 0px;
	border-bottom: 2px solid #F4CA21;
	border-top: 2px solid #F4CA21;
	color: #7A5511;
	line-height: 22px;
	padding: 0 10px 0 39px;
}
